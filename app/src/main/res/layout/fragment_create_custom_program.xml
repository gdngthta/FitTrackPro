<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Routine Setup"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Define your program basics"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Routine Name Label -->
        <TextView
            android:id="@+id/labelRoutineName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Routine Name"
            android:textSize="14sp"
            android:textColor="#B0B0B0"
            app:layout_constraintTop_toBottomOf="@id/textSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Routine Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutProgramName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="e.g., Upper/Lower Split"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="#2A2F3E"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelRoutineName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editProgramName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0B0B0" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Frequency Label -->
        <TextView
            android:id="@+id/labelFrequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Training Frequency (per week)"
            android:textSize="14sp"
            android:textColor="#B0B0B0"
            app:layout_constraintTop_toBottomOf="@id/layoutProgramName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Frequency Selector Buttons (1-7) -->
        <LinearLayout
            android:id="@+id/layoutFrequencySelector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/labelFrequency"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFreq1"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFreq2"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFreq3"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFreq4"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFreq5"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFreq6"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="6"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFreq7"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="7"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="12dp" />
        </LinearLayout>

        <!-- Help Text -->
        <TextView
            android:id="@+id/textHelpFrequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="This helps track your consistency but doesn't limit your workout days"
            android:textSize="12sp"
            android:textColor="#B0B0B0"
            app:layout_constraintTop_toBottomOf="@id/layoutFrequencySelector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/textHelpFrequency"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonContinue"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="Continue"
            android:textSize="16sp"
            android:textStyle="bold"
            style="@style/Widget.Material3.Button"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>