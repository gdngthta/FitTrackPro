<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/workout"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />

                <ImageButton
                    android:id="@+id/buttonSettings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="@string/settings"
                    app:tint="?attr/colorOnBackground" />
            </LinearLayout>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/textSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/workout_subtitle"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- My Programs Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/my_programs"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAddRoutine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_routine"
                    android:textSize="12sp"
                    style="@style/Widget.Material3.Button"
                    app:icon="@drawable/ic_add"
                    app:iconSize="16dp"
                    app:iconPadding="4dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />
            </LinearLayout>

            <!-- My Programs RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMyPrograms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_workout_program"
                tools:itemCount="2" />

            <!-- Empty State Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_trending_up"
                        android:contentDescription="@string/no_programs_created"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/no_programs_created"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textAlignment="center" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonCreateFirstProgram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/create_first_program"
                        style="@style/Widget.Material3.Button" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recommended Programs Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/recommended_programs"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <!-- Recommended Programs RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRecommendedPrograms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_workout_program"
                tools:itemCount="4" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>