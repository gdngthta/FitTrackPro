<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Toolbar Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorToolbar"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"
                android:elevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/workout"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:id="@+id/iconSettings"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@android:drawable/ic_menu_manage"
                        android:contentDescription="@string/settings"
                        app:tint="@color/white" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/workout_subtitle"
                    android:textSize="14sp"
                    android:textColor="@color/colorOnSurfaceVariant" />
            </LinearLayout>

            <!-- My Programs Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <!-- My Programs Header -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_programs"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonAddRoutine"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:text="@string/add_routine"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        app:icon="@android:drawable/ic_input_add"
                        app:iconTint="@color/white"
                        app:iconSize="16dp"
                        app:iconPadding="4dp"
                        app:cornerRadius="20dp"
                        app:backgroundTint="@color/colorPrimary"
                        style="@style/Widget.Material3.Button" />
                </RelativeLayout>

                <!-- My Programs RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerMyPrograms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_workout_program"
                    tools:itemCount="2" />
            </LinearLayout>

            <!-- Recommended Programs Section -->
            <LinearLayout
                android:id="@+id/sectionRecommendedPrograms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/recommended_programs"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <!-- Beginner Programs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/beginner"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnSurfaceSecondary" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerBeginnerPrograms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="1" />
                </LinearLayout>

                <!-- Intermediate Programs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/intermediate"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnSurfaceSecondary" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerIntermediatePrograms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="1" />
                </LinearLayout>

                <!-- Pro Programs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/pro"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnSurfaceSecondary" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerProPrograms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="1" />
                </LinearLayout>

                <!-- Elite Programs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/elite"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnSurfaceSecondary" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerElitePrograms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="80dp"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false"
                        tools:itemCount="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>