<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/textFoodName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Chicken Breast"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textPortion" />

        <TextView
            android:id="@+id/textPortion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="x1. 5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="?attr/colorPrimary"
            tools:text="248 cal"
            app:layout_constraintTop_toBottomOf="@id/textFoodName"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="11sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="P: 46. 5g"
            app:layout_constraintTop_toTopOf="@id/textCalories"
            app:layout_constraintStart_toEndOf="@id/textCalories" />

        <TextView
            android:id="@+id/textCarbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="11sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="C: 0g"
            app:layout_constraintTop_toTopOf="@id/textCalories"
            app:layout_constraintStart_toEndOf="@id/textProtein" />

        <TextView
            android:id="@+id/textFats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="11sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="F: 5.4g"
            app:layout_constraintTop_toTopOf="@id/textCalories"
            app:layout_constraintStart_toEndOf="@id/textCarbs" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>