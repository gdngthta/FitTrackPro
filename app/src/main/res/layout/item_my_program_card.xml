<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Program Name -->
        <TextView
            android:id="@+id/textProgramName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:text="Push Pull Legs" />

        <!-- Progress Indicator -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:indicatorColor="@color/emerald_green"
            app:trackColor="@color/md_theme_surfaceVariant"
            app:trackCornerRadius="4dp"
            android:progress="37"
            tools:progress="37" />

        <!-- Progress Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/md_theme_onSurfaceVariant"
                android:contentDescription="Week" />

            <TextView
                android:id="@+id/textProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                tools:text="Week 3 of 8" />
        </LinearLayout>

        <!-- Today's Workout Section -->
        <LinearLayout
            android:id="@+id/layoutTodayWorkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:orientation="vertical"
            android:background="@drawable/bg_chip"
            tools:backgroundTint="#10B98120">

            <TextView
                android:id="@+id/textTodayLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/emerald_green"
                tools:text="Today's Workout: Push Day" />

            <TextView
                android:id="@+id/textExercisePreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                tools:text="Bench Press, OHP, Incline Press +3 more" />
        </LinearLayout>

        <!-- Rest Day Section -->
        <LinearLayout
            android:id="@+id/layoutRestDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="gone">

            <TextView
                android:id="@+id/textRestDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                tools:text="Rest Day" />
        </LinearLayout>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStartWorkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Start Today's Workout"
            android:textSize="16sp"
            android:backgroundTint="@color/emerald_green"
            android:textColor="@color/white"
            style="@style/Widget.Material3.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonViewDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/view_details"
            android:visibility="gone"
            tools:visibility="gone"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
