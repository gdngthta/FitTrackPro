<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Program Name -->
        <TextView
            android:id="@+id/textProgramName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:text="Starting Strength" />

        <!-- Metadata Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Duration -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/md_theme_onSurfaceVariant"
                    android:contentDescription="Duration" />

                <TextView
                    android:id="@+id/textDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_onSurfaceVariant"
                    tools:text="8 weeks" />
            </LinearLayout>

            <!-- Frequency -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_workout"
                    app:tint="@color/md_theme_onSurfaceVariant"
                    android:contentDescription="Frequency" />

                <TextView
                    android:id="@+id/textFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_onSurfaceVariant"
                    tools:text="3 days/week" />
            </LinearLayout>
        </LinearLayout>

        <!-- Focus Areas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_badge"
                app:tint="@color/md_theme_onSurfaceVariant"
                android:contentDescription="Focus" />

            <TextView
                android:id="@+id/textFocusAreas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="14sp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                tools:text="Strength, Compound Lifts" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:maxLines="4"
            android:ellipsize="end"
            tools:text="Perfect for newcomers to strength training. Focus on compound movements with progressive overload. Build foundational strength and learn proper form." />

        <!-- Start Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Start Program"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/emerald_green"
            android:textColor="@color/white"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
