<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Dark) - Emerald Green -->
    <style name="Base.Theme.FitTrackPro" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/md_theme_primary_dark</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary_dark</item>
        <item name="colorPrimaryContainer">@color/md_theme_primaryContainer_dark</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_onPrimaryContainer_dark</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/md_theme_secondary_dark</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary_dark</item>
        <item name="colorSecondaryContainer">@color/md_theme_secondaryContainer_dark</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_onSecondaryContainer_dark</item>

        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/md_theme_tertiary_dark</item>
        <item name="colorOnTertiary">@color/md_theme_onTertiary_dark</item>
        <item name="colorTertiaryContainer">@color/md_theme_tertiaryContainer_dark</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_onTertiaryContainer_dark</item>

        <!-- Error color -->
        <item name="colorError">@color/md_theme_error_dark</item>
        <item name="colorOnError">@color/md_theme_onError_dark</item>
        <item name="colorErrorContainer">@color/md_theme_errorContainer_dark</item>
        <item name="colorOnErrorContainer">@color/md_theme_onErrorContainer_dark</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/md_theme_background_dark</item>
        <item name="colorOnBackground">@color/md_theme_onBackground_dark</item>

        <!-- Surface color -->
        <item name="colorSurface">@color/md_theme_surface_dark</item>
        <item name="colorOnSurface">@color/md_theme_onSurface_dark</item>
        <item name="colorSurfaceVariant">@color/md_theme_surfaceVariant_dark</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_onSurfaceVariant_dark</item>

        <!-- Outline color -->
        <item name="colorOutline">@color/md_theme_outline_dark</item>
        <item name="colorOutlineVariant">@color/md_theme_outlineVariant_dark</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/md_theme_background_dark</item>
        <item name="android:navigationBarColor">@color/md_theme_background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>