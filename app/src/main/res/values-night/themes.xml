<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Dark) -->
    <style name="Base.Theme.FitTrackPro" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/md_theme_primary_dark</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary_dark</item>
        <item name="colorPrimaryContainer">@color/md_theme_primaryContainer_dark</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_onPrimaryContainer_dark</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/md_theme_secondary_dark</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary_dark</item>
        <item name="colorSecondaryContainer">@color/md_theme_secondaryContainer_dark</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_onSecondaryContainer_dark</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/md_theme_background_dark</item>
        <item name="colorOnBackground">@color/md_theme_onBackground_dark</item>

        <!-- Surface color -->
        <item name="colorSurface">@color/md_theme_surface_dark</item>
        <item name="colorOnSurface">@color/md_theme_onSurface_dark</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/md_theme_surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>