<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Light - Optional, app is dark-focused) -->
    <style name="Base.Theme.FitTrackPro" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#10B981</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#D1FAE5</item>
        <item name="colorOnPrimaryContainer">#003822</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#14B8A6</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSecondaryContainer">#99F6E4</item>
        <item name="colorOnSecondaryContainer">#003734</item>

        <!-- Tertiary brand color -->
        <item name="colorTertiary">#34D399</item>
        <item name="colorOnTertiary">#FFFFFF</item>
        <item name="colorTertiaryContainer">#D1FAE5</item>
        <item name="colorOnTertiaryContainer">#003822</item>

        <!-- Error color -->
        <item name="colorError">#B3261E</item>
        <item name="colorOnError">#FFFFFF</item>

        <!-- Background color -->
        <item name="android:colorBackground">#FAFAFA</item>
        <item name="colorOnBackground">#1C1B1F</item>

        <!-- Surface color -->
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#1C1B1F</item>
        <item name="colorSurfaceVariant">#E0E0E0</item>
        <item name="colorOnSurfaceVariant">#49454F</item>

        <!-- Outline color -->
        <item name="colorOutline">#79747E</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/md_theme_dark_surface</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.FitTrackPro" parent="Base.Theme.FitTrackPro" />

    <!-- NoActionBar theme -->
    <style name="Theme.FitTrackPro.NoActionBar" parent="Theme.FitTrackPro">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ShapeAppearance.Material3.Corner.Full" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>