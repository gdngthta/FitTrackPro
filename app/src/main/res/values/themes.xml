<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.FitTrackPro" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#6750A4</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#EADDFF</item>
        <item name="colorOnPrimaryContainer">#21005D</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#625B71</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSecondaryContainer">#E8DEF8</item>
        <item name="colorOnSecondaryContainer">#1D192B</item>

        <!-- Tertiary brand color -->
        <item name="colorTertiary">#7D5260</item>
        <item name="colorOnTertiary">#FFFFFF</item>
        <item name="colorTertiaryContainer">#FFD8E4</item>
        <item name="colorOnTertiaryContainer">#31111D</item>

        <!-- Error color -->
        <item name="colorError">#B3261E</item>
        <item name="colorOnError">#FFFFFF</item>

        <!-- Background color -->
        <item name="android:colorBackground">#FFFBFE</item>
        <item name="colorOnBackground">#1C1B1F</item>

        <!-- Surface color -->
        <item name="colorSurface">#FFFBFE</item>
        <item name="colorOnSurface">#1C1B1F</item>
        <item name="colorSurfaceVariant">#E7E0EC</item>
        <item name="colorOnSurfaceVariant">#49454F</item>

        <!-- Outline color -->
        <item name="colorOutline">#79747E</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.FitTrackPro" parent="Base.Theme.FitTrackPro" />

    <!-- NoActionBar theme -->
    <style name="Theme.FitTrackPro.NoActionBar" parent="Theme.FitTrackPro">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ShapeAppearance.Material3.Corner.Full" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>